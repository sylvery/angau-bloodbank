{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
{{ include('main/page-title.html.twig', {
    'pagetitle': 'Locations',
    'subtitle': 'A tabuluated list of all locations where blood donations have been collected.',
    'actions': [
        {
            'name': 'location_new',
            'class': 'success border-warning',
            'label': 'add new location',
            'id': 0
        }
    ]
})}}
<div class="col">
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Donations</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.name }}</td>
                <td>{{ location.locality.count }}</td>
                <td>{{ location.longitude }}</td>
                <td>{{ location.latitude }}</td>
                <td>
                    <a href="{{ path('location_show', {'id': location.id}) }}">show</a>
                    <a href="{{ path('location_edit', {'id': location.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

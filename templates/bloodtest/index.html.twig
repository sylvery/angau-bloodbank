{% extends 'base.html.twig' %}

{% block title %}Bloodtest index{% endblock %}

{% block body %}
    <h1>Bloodtest index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Comment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bloodtest in bloodtests %}
            <tr>
                <td>{{ bloodtest.id }}</td>
                <td>{{ bloodtest.date ? bloodtest.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ bloodtest.comment }}</td>
                <td>
                    <a href="{{ path('bloodtest_show', {'id': bloodtest.id}) }}">show</a>
                    <a href="{{ path('bloodtest_edit', {'id': bloodtest.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bloodtest_new') }}">Create new</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Donations {{parent()}}{% endblock %}

{% block body %}
<div class="col">
    <h1>Donations</h1>
    <table class="table table-sm table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Location</th>
                <th>Blood Bags</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for donation in donations %}
            <tr>
                <td>{{ donation.date ? donation.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ donation.location }}</td>
                <td>{{ donation.bags }}</td>
                <td class="btn-group">
                    <a class="btn btn-info btn-sm" role="button" href="{{ path('donation_show', {'id': donation.id}) }}">show</a>
                    <a class="btn btn-warning btn-sm" role="button" href="{{ path('donation_edit', {'id': donation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-outline-primary btn-sm" role="button" href="{{ path('donation_new') }}">Create new</a>
</div>
{% endblock %}

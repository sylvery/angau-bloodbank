{% extends 'base.html.twig' %}

{% block title %}Edit Donation{% endblock %}

{% block body %}
    {{ include('main/page-title.html.twig', {
        'pagetitle': 'Update Donation',
        'subtitle': 'Update this donation by filling out the form below',
        'actions': [
            {
                'name': 'donation_index',
                'class': 'primary',
                'label': 'back to donations',
                'id': donation.id
            },{
                'name': 'donation_show',
                'class': 'warning',
                'label': 'cancel update',
                'id': donation.id
            },{
                'name': 'donation_new',
                'class': 'success',
                'label': 'add new donation',
                'id': donation.id
            }
        ]
    })}}
    <div class="col-sm">
        {{ include('donation/_form.html.twig', {'button_label': 'Update'}) }}
    </div>
    <div class="col-sm">
        {{ include('main/workflow-status.html.twig', {currentPlace: donation.currentPlace})}}
        <div class="card text-white bg-info">
          <div class="card-body">
            <h4 class="card-title lead">{{donation.donor.fullname}}</h4>
            <div class="card-text">
                <p><span class="text-dark small">Age:</span> {{donation.donor.getDonorAge ? donation.donor.getDonorAge.y~' years old' : '' }}</p>
                <p><span class="text-dark small">Blood Type: </span>{{donation.donor.bloodtype}}</p>
            </div>
          </div>
        </div>
    </div>
{% endblock %}

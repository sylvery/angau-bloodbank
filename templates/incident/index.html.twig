{% extends 'base.html.twig' %}

{% block title %}Incidents {{parent()}}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Incidents</h1>
            </div>
            <div class="col-12">
                <table class="table table-sm table-striped table-secondary">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Incidenttype</th>
                            <th>Location</th>
                            <th>Complainant</th>
                            <th>Defendant</th>
                            <th>Statement</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for incident in incidents %}
                        <tr>
                            <td>{{ incident.date ? incident.date|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ incident.incidenttype }}</td>
                            <td>{{ incident.location }}</td>
                            <td>{{ incident.complainant ? incident.complainant|join(', ') : '' }}</td>
                            <td>{{ incident.defendant ? incident.defendant|join(', ') : '' }}</td>
                            <td>{{ incident.statement }}</td>
                            <td class="btn-group">
                                <a class="btn btn-info btn-sm" role="button" href="{{ path('incident_show', {'id': incident.id}) }}">show</a>
                                <a class="btn btn-warning btn-sm" role="button" href="{{ path('incident_edit', {'id': incident.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-12">
                <a class="btn btn-sm btn-success" role="button" href="{{ path('incident_new') }}">new incident</a>
            </div>
        </div>
    </div>


{% endblock %}

<div class="container">
    <div class="row">
        <div class="col-6">
            <p class="lead text-warning">Donation Summary Report</p>
            {% for donation in donations %}
                <p>{{donation.location}} <span class="text-warning">{{donation.volume}}</span></p>
            {% endfor %}
            <a role="button" href="{{path('donation_index')}}" class="btn btn-info btn-outline-warning btn-sm">view donations</a>
        </div>
        <div class="col-6">
            <p class="lead text-warning">Donor Summary Report</p>
            <table class="table table-striped table-inverse table-responsive table-sm small">
                <thead class="thead-inverse">
                    <tr>
                        <th>Donor</th>
                        <th>Total Donations</th>
                    </tr>
                </thead>
                <tbody>
                    {% for donor in donors %}
                        <tr>
                            <td scope="row">{{donor.fullname}}</td>
                            <td>{{donor.donations.count}}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>            
            <a role="button" href="{{path('donor_index')}}" class="btn btn-info btn-outline-warning btn-sm">view donors</a>
        </div>
    </div>
</div>
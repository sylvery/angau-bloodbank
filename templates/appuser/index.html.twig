{% extends 'base.html.twig' %}

{% block title %}Appuser index{% endblock %}

{% block body %}
    <div class="col-12">
        <h1>Users</h1>

        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Badgenumber</th>
                    <th>Roles</th>
                    <th>Password</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for appuser in appusers %}
                <tr>
                    <td>{{ appuser.badgenumber }}</td>
                    <td>{{ appuser.roles ? appuser.roles|json_encode : '' }}</td>
                    <td>{{ appuser.password }}</td>
                    <td class="btn-group">
                        <a class="btn btn-info btn-sm" role="button" href="{{ path('appuser_show', {'id': appuser.id}) }}">view</a>
                        <a class="btn btn-warning btn-sm" role="button" href="{{ path('appuser_edit', {'id': appuser.id}) }}">update</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-sm btn-success" role="button" href="{{ path('appuser_new') }}">Create new</a>
    </div>
{% endblock %}
